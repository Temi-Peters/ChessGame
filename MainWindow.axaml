<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="ChessGame.MainWindow"
    Width="800"
    Height="800">

    <Grid RowDefinitions="Auto,*">

        <TextBlock
            x:Name="StatusText"
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="10"/>

        <UniformGrid
            x:Name="BoardGrid"
            Grid.Row="1"
            Rows="8"
            Columns="8"/>

    </Grid>

</Window>