<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ChessGame.PromotionWindow"
        Width="300"
        Height="100"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="Promote Pawn">

    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">

        <Button x:Name="QueenButton" Content="Queen"/>
        <Button x:Name="RookButton" Content="Rook"/>
        <Button x:Name="BishopButton" Content="Bishop"/>
        <Button x:Name="KnightButton" Content="Knight"/>

    </StackPanel>
</Window>